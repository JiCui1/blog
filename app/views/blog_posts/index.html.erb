<h1>My Blog</h1>

<%# use <%= to show the whole blog_post record %>
<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post_path(blog_post) %></h2>
    <% if blog_post.draft? %>
      <span class="p-2 rounded bg-gray-200 text-gray-900">Draft</span>
    <% elsif blog_post.scheduled? %>
      <span class="p-2 rounded bg-blue-200 text-blue-900">Scheduled</span>
    <% end %>
    <p> 
      <%= blog_post.body %>
    </p>
  </div>
<% end %>
